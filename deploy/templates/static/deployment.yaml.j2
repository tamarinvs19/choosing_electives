apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app_name }}-static
spec:
  replicas: 3
  revisionHistoryLimit: {{ revision_history_limit | default('3') }}
  selector:
    matchLabels:
      app: {{ app_name }}-static
  strategy:
    rollingUpdate:
      maxUnavailable: {{ max_unavailable | default('1') }}
      maxSurge: {{ max_surge | default('0') }}
  template:
    metadata:
      labels:
        app: {{ app_name }}-static
    spec:
      terminationGracePeriodSeconds: {{ termination_grace_period_seconds | default('60') }}
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            - labelSelector:
                matchExpressions:
                  - key: app
                    operator: In
                    values: [{{ app_name }}-static]
              topologyKey: failure-domain.beta.kubernetes.io/zone
      securityContext:
        runAsUser: 101
        runAsGroup: 101
        fsGroup: 101
      containers:
      - name: {{ app_name }}-static
        image: {{ static_image_path }}:{{ static_image_version }}
        ports:
        - containerPort: 8080
        readinessProbe:
          httpGet:
            path: /healthz
            port: 8080
          initialDelaySeconds: 5
          timeoutSeconds: 30
        lifecycle:
          preStop:
            exec:
              command: ['/bin/sh', '-c', 'sleep 5']
        resources:
          requests:
            cpu: 50m
            memory: 64Mi
          limits:
            cpu: 100m
            memory: 128Mi
